@model Company

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-truck"></i> Transfer Requests
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TransferRequest" asp-action="Upsert" asp-route-companyId="@Model.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A New Transfer Request
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Item</b>
            </th>
            <th class="text-white">
                <b>Quantity</b>
            </th>
            <th class="text-white">
                <b>Origin</b>
            </th>
            <th class="text-white">
                <b>Destination</b>
            </th>
            <th class="text-white">
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.TransferRequests.OrderBy(u => u.Item))
        {
            <tr>
                <td class="text-white">
                    @obj.Item
                </td>
                <td class="text-white">
                    @obj.Quantity
                </td>
                <td class="text-white">
                    @obj.OriginLocation.Name
                </td>
                <td class="text-white">
                    @obj.DestinationLocation.Name
                </td>
                
                <td class="text-white">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="TransferRequest" asp-action="Upsert" asp-route-companyId="@Model.Id" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <a asp-controller="TransferRequest" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<hr/>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-pin-map"></i> Locations
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Location" asp-action="Upsert" asp-route-companyId="@Model.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A New Location
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Location Name</b>
            </th>
            <th class="text-white">
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Locations.OrderBy(u => u.Name))
        {
            <tr>
                <td class="text-white">
                    @obj.Name
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Location" asp-action="Upsert" asp-route-companyId="@obj.CompanyId" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Rename
                        </a>

                        <a asp-controller="Location" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />