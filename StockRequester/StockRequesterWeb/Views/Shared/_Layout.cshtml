<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockRequester</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockRequesterWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"/>
    <style>
        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, .55);
        }
        .navbar-dark .navbar-nav .nav-link:hover {
            color: rgba(255, 255, 255, .75);
        }
    </style>
</head>
<body>
    <partial name="_CookieConsentPartial" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StockRequester</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @if(User.IsInRole(SD.Role_SiteAdmin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="SiteAdmin" asp-controller="Companies" asp-action="Index">Companies (Admin View)</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_CompanyUser) || User.IsInRole(SD.Role_CompanyAdmin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="CompanyUser" asp-controller="Company" asp-action="Index">Company View</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_CompanyAdmin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Company Admin</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item nav-link" asp-area="CompanyAdmin" asp-controller="CompanyUsers" asp-action="Index">Company Users</a>
                                    <a class="dropdown-item nav-link" asp-area="CompanyAdmin" asp-controller="DefaultItemDescription" asp-action="Upsert">Default Item Description</a>
                                    @* <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a> *@
                                </div>
                            </li>

                            @* <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                              <button type="button" class="btn btn-info">Company Admin</button>
                              <div class="btn-group" role="group">
                                <button id="btnGroupDrop3" type="button" class="btn btn-info dropdown-toggle show" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
                                <div class="dropdown-menu show" aria-labelledby="btnGroupDrop3" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate3d(0px, 40px, 0px);" data-popper-placement="bottom-start">
                                  <a class="dropdown-item nav-link" asp-area="CompanyAdmin" asp-controller="CompanyUsers" asp-action="Index">Company Users</a>
                                  <a class="dropdown-item nav-link" asp-area="CompanyAdmin" asp-controller="DefaultItemDescription" asp-action="Upsert">Default Item Description</a>
                                </div>
                              </div>
                            </div>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="CompanyAdmin" asp-controller="CompanyUsers" asp-action="Index">Company Users</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="CompanyAdmin" asp-controller="DefaultItemDescription" asp-action="Upsert">Default Item Description</a>
                            </li> *@
                        }
                    </ul>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-muted">
        <div class="container">
            &copy; 2024 StockRequester. All rights reserved. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
