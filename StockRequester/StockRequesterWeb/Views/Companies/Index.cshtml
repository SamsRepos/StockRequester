@{
    ViewData["Title"] = "Companies";
}

@model List<Company>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Companies List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Companies" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A New Company
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered border-white table-striped">
    <thead>
    <tr>
        <th class="text-white">
            <b>Company Name</b>
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Name))
        {
            <tr>
                <td class="text-white">
                    @obj.Name
                </td>
            </tr>
        }
    </tbody>
</table>