@{
    ViewData["Title"] = "Edit Company Data";
}

@model Company

<h1>Edit @Model.Name Company Info</h1>
<input asp-for="Id" hidden />

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Company</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" 
                    <i class="bi bi-check-circle"></i> Update
                </button>
                <a asp-controller="Companies" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
            <div class="col-6 col-md-3">
            </div>
        </div>

        
        
    </div>
</form>

                
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}