@{
    ViewData["Title"] = "Locations";
}

@model List<Location>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Locations List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Location" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create A New Location
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Location Name</b>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Name))
        {
            <tr>
                <td class="text-white">
                    @obj.Name
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Location" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Location" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>