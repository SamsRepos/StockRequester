@model Location

@{
    ViewData["Title"] = $"{(Model.Id != 0 ? "Rename" : "Create")} Location";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                <i class="bi bi-pin-map"></i> @(Model.Id != 0 ? "Rename" : "Create") Location
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />
        <input asp-for="CompanyId" hidden />
        <input asp-for="Company" hidden />
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row p-1">
            <div class="col-6 col-md-3">
                <div class="w-100 btn-group" role="group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> @(Model.Id != 0 ? "Update" : "Create")
                    </button>
                    <a asp-controller="Company" asp-action="Index" asp-route-companyId="@Model.CompanyId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to Company View
                    </a>
                </div>
            </div>
            <div class="col-6 col-md-3">
            </div>
        </div>



    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}