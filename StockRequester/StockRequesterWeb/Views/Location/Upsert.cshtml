@{
    ViewData["Title"] = "Edit Location";
}

@model Location

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Location</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />
        <input asp-for="CompanyId" hidden />
        <input asp-for="Company" hidden />
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:150px">
                    <i class="bi bi-check-circle"></i> @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Location" asp-action="Index" asp-route-companyId="@Model.CompanyId" class="btn btn-secondary" style="width:150px">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>



    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}