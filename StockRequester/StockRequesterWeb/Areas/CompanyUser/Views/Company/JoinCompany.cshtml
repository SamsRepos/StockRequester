@{
    ViewData["Title"] = "Join Company";
}

@model InvitedEmail

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Join Company</h2>
            <hr />
        </div>

        <p>@Model.Company.Name</p>
        <input asp-for="Id" hidden />
        <input asp-for="Email" hidden />
        <input asp-for="CompanyId" hidden />
        <input asp-for="Company" hidden />
        <div class="row p-1">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Join Company
                </button>
            </div>
            <div class="col-6 col-md-3">
            </div>
        </div>

    </div>
</form>











