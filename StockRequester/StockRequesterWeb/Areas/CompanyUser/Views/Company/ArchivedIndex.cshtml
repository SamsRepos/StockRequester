@model Company

@{
    ViewData["Title"] = $"Archived Requests - {Model.Name}";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">
                Archived Requests - @Model.Name
            </h1>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
</div>

<hr />

@await Html.PartialAsync(
        "../TransferRequest/_TransferRequestsTable.cshtml",
        new TrTableViewModel
    {
        TransferRequests = Model.TransferRequests,
        TableOptions = TrTableOptions.ForArchivedView()
    }
    )

<hr />

<a asp-controller="Company" asp-action="Index" class="btn btn-secondary mx-2">
    <i class="bi bi-arrow-left-circle"></i> Back to Company View
</a>