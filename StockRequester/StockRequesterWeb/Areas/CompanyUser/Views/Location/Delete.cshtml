@{
    ViewData["Title"] = "Delete Location";
}

@model Location

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Location</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <input asp-for="Id" hidden />
                <input asp-for="CompanyId" hidden />
                <div class="border p-3 mt-4">

                    <div class="form-floating py-2 col-12">
                        <label asp-for="Name" class="ms-2"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                    @if (Model.TransferRequestsFromThisOrigin.Count > 0 || Model.TransferRequestsToThisDestination.Count > 0)
                    {
                        <div class="form-floating py-2 col-12">
                            <p>
                                You cannot delete this location, since the following still exist:<br />
                                @Model.TransferRequestsFromThisOrigin.Count transfer requests from this origin <br />
                                @Model.TransferRequestsToThisDestination.Count transfer requests to this destination <br />
                                <hr />
                            </p>
                        </div>
                    }

                    <div class="row mt-3">
                        @if (Model.TransferRequestsFromThisOrigin.Count == 0 && Model.TransferRequestsToThisDestination.Count == 0)
                        {
                            <div class="col-6 col-md-3">
                            
                                <button type="submit" class="btn btn-danger form-control">
                                    <i class="bi bi-trash3"></i> Delete Now
                                </button>
                            
                            </div>
                        }
                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border form-control">
                                <i class="bi bi-arrow-left-circle"></i> Back to Company View
                            </a>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
