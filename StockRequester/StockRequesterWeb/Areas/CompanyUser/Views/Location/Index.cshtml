@model Location

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">
                <i class="bi bi-pin-map"></i> @Model.Name
            </h1>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
</div>

<hr />


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-truck"></i> Transfer Requests From This Origin
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TransferRequest" asp-action="Upsert" asp-route-originLocationId="@Model.Id" asp-route-backLocationId="@Model.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Transfer Request From Origin @Model.Name
            </a>
        </div>
    </div>
</div>

<hr />

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Item</b>
            </th>
            <th class="text-white">
                <b>Quantity</b>
            </th>
            <th class="text-white">
                <b>Origin</b>
            </th>
            <th class="text-white">
                <b>Destination</b>
            </th>
            <th class="text-white">
                <b>Status</b>
            </th>
            <th class="text-white">
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.TransferRequestsFromThisOrigin.OrderBy(u => u.Item))
        {
            <tr>
                <td class="text-white">
                    @obj.Item
                </td>
                <td class="text-white">
                    @obj.Quantity
                </td>
                <td class="text-white">
                    @obj.OriginLocation.Name
                </td>
                <td class="text-white">
                    @obj.DestinationLocation.Name
                </td>
                <td class="text-white">
                    @obj.Status.Status
                </td>
                <td class="text-white">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="TransferRequest" asp-action="Upsert" asp-route-backLocationId="@Model.Id" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit Details
                        </a>

                        <a asp-controller="TransferRequest" asp-action="UpdateStatus" asp-route-id="@obj.Id" asp-route-backLocationId="@Model.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Update Status
                        </a>

                        @if (obj.Status.CanBeArchived())
                        {
                            <a asp-controller="TransferRequest" asp-action="Archive" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-archive"></i> Archive
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />



<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-truck"></i> Transfer Requests To This Destination
            </h2>
        </div>
        <div class="col-6 text-end">
