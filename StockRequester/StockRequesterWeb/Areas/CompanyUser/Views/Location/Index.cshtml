    <div class="col-6 col-md-3">
        <a asp-controller="Company" asp-action="Index" asp-route-companyId="@Model.CompanyId" class="btn btn-secondary border form-control">
            <i class="bi bi-arrow-left-circle"></i> Back to Company View
        </a>
    </div>
    <div class="col-6 col-md-3">
    </div>
</div>

