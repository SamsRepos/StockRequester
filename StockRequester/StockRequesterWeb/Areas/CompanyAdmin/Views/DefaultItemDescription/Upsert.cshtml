@model DefaultItemDescriptionViewModel

@{
    ViewData["Title"] = $"{(string.IsNullOrEmpty(Model.DefaultItemDescription) ? "Create" : "Edit")} Default Item Description";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                @ViewData["Title"]
            </h2>
            <hr />
        </div>

        <div class="py-2 col-12">
            <label asp-for="@Model.DefaultItemDescription" class="ms-2 text-muted"></label>
            <textarea asp-for="@Model.DefaultItemDescription" class="form-control border-0 shadow"></textarea>
            <span asp-validation-for="@Model.DefaultItemDescription" class="text-danger"></span>
        </div>

        <div class="row p-1">
            <div class="col-12 col-md-6">
                <div class="w-100 btn-group" role="group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Update
                    </button>
                </div>
            </div>
        </div>



    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}