@model Company

@{
    ViewData["Title"] = "Manage Users";
}


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-person"></i> Users
            </h2>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
</div>

<hr />

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Name</b>
            </th>
            <th class="text-white">
                <b>Email Address</b>
            </th>
            <th class="text-white">
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Users.OrderBy(u => u.Name))
        {
            <tr>
                <td class="text-white">
                    @obj.Name
                </td>
                <td class="text-white">
                    @obj.Email
                </td>

                <td class="text-white">
                    <div class="w-100 btn-group" role="group">
                        @* <a asp-controller="TransferRequest" asp-action="Upsert" asp-route-companyId="@Model.Id" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil"></i> Edit
                    </a>

                    <a asp-controller="TransferRequest" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                    <i class="bi bi-trash3"></i> Delete
                    </a> *@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                <i class="bi bi-hourglass-split"></i> Invited User Email Addresses
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CompanyUsers" asp-action="Invite" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add A New Invited User Email
            </a>
        </div>
    </div>
</div>

<hr />

<table class="table table-bordered border-white table-striped">
    <thead>
        <tr>
            <th class="text-white">
                <b>Email Address</b>
            </th>
            <th class="text-white">
                <b>Actions</b>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.InvitedEmails.OrderBy(u => u.Email))
        {
            <tr>
                <td class="text-white">
                    @obj.Email
                </td>

                <td class="text-white">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="CompanyUsers" asp-action="DeleteInvite" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>